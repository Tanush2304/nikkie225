<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.nichi.nikkie225.WelcomeController"
            styleClass="root">

    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #2A75BB;">
            <Button text="Monitor"
                    fx:id="monitorButton"
                    onAction="#handleMonitorButton"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #4682B4;" />
            <Button text="Trade Entry"
                    fx:id="tradeEntryButton"
                    onAction="#handleTradeEntryButton"
                    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #4682B4;" />
        </HBox>
    </top>

    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>
