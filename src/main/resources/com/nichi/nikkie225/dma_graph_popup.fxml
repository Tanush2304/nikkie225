<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nichi.nikkie225.DMAGraphPopupController"
            prefWidth="1200.0" prefHeight="800.0">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Label text="Select Stock:" />
            <ComboBox fx:id="stockSelector" prefWidth="200"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true"
                    hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <VBox fx:id="chartContainer" spacing="20"
                  style="-fx-padding: 10;"

                  maxWidth="Infinity" />
        </ScrollPane>
    </center>

</BorderPane>
